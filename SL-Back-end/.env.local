# Database Configuration (Local Docker)
DATABASE_URL=postgresql+asyncpg://stocklabadmin:nmmteam05@sl_postgres_dev:5432/stock_lab_investment_db
DATABASE_SYNC_URL=postgresql://stocklabadmin:nmmteam05@sl_postgres_dev:5432/stock_lab_investment_db
DATABASE_POOL_SIZE=20  # 커넥션 풀 크기 (대용량 처리용)
DATABASE_MAX_OVERFLOW=40  # 최대 오버플로우 커넥션
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600  # 1시간마다 커넥션 재활용
DATABASE_ECHO=False  # SQL 로깅 (개발시에만 True)

# Redis Configuration
# Local Development: 로컬 Redis 컨테이너 사용
# Production (EC2): clustercfg.sl-redis-cl.lvbc9o.apn2.cache.amazonaws.com
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600  # 캐시 유효시간 (초)
CACHE_TTL_SECONDS=3600  # 기본 캐시 TTL
CACHE_PREFIX=quant  # 캐시 키 prefix
ENABLE_CACHE=True  # 캐싱 활성화
ENABLE_CACHE_WARMING=False  # 로컬에서는 캐시 워밍 비활성화

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Quant Investment API
VERSION=1.0.0
DEBUG=True

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance Settings
CHUNK_SIZE=10000  # 대용량 데이터 처리 시 청크 크기
MAX_WORKERS=4  # 병렬 처리 워커 수
ENABLE_QUERY_CACHE=True  # 쿼리 캐싱 활성화

# Backtesting Configuration
BACKTEST_MAX_CONCURRENT_JOBS=2  # 동시 백테스팅 작업 수
BACKTEST_MEMORY_LIMIT_GB=8  # 백테스팅 메모리 제한
USE_MULTIPROCESSING=false  # 멀티프로세싱 비활성화 (동시성 우선)

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/quant_api.log
